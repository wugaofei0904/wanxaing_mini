			</ad> -->
		</view>
		<view class="tj-detail-padding-box">
			<!-- 相关推荐 -->
			<view s-if="{{tuijianList.length}}" class="container_node pad_box">
				<view class="container_node_top">
					<view class="container_node_top_line"></view>
					<view class="container_node_title">相关推荐</view>
				</view>

				<view s-for="{{tuijianList}}" s-for-item="item" s-for-index="idx">
					<view class="padddd">
						<custom s-if="{{item != ''}}" noMargin='{{idx == 0}}' dataitem='{{item}}'></custom>
					</view>

					<view s-if="{{item == ''}}" class="ad_container">
						<!-- <view  class="ad_container"> -->
						<view class="ad-title {{hidecontent ? '':'show'}}">
							<view class="ad-title-mode-1">AD</view>
							<view class="ad-title-mode-2">赞助内容</view>
							<view class="ad-title-mode-3">广告收益用于作者激励和平台发展 </view>
						</view>
						<ad s-if="{{idx == 3}}" binderror="aderror2" appid="f1522535" updatetime="{{adNumber}}"
							apid="{{adid_2}}" class="ad" type="feed"></ad>
						<ad s-if="{{idx == 3 && showadid_2}}" binderror="aderror2" updatetime="{{adNumber}}"
							appid="f1522535" apid="6775935" class="ad" type="feed"></ad>
						<ad s-if="{{idx == 7}}" binderror="aderror3" updatetime="{{adNumber}}" appid="f1522535"
							apid="{{adid_3}}" class="ad" type="feed"></ad>
						<ad s-if="{{idx == 7 && showadid_3}}" updatetime="{{adNumber}}" binderror="aderror3"
							appid="f1522535" apid="6775935" class="ad" type="feed"></ad>
						<ad s-if="{{idx != 3 && idx != 7}}" updatetime="{{adNumber}}" appid="f1522535" apid="6775935"
							class="ad" type="feed"></ad>
					</view>
				</view>
			</view>
